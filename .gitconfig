[user]
    name = Pedro Araujo

[includeIf "gitdir:~/work/"]
    path = .gitconfig-work
[includeIf "gitdir:~/personal/"]
    path = .gitconfig-personal
[includeIf "gitdir:~/.config/yadm/"]
    path = .gitconfig-personal
[includeIf "gitdir:~/.local/share/yadm/"]
    path = .gitconfig-personal


[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = less -F -X
    attributesfile = ~/.gitattributes

[alias]
    gl = log --graph --decorate --pretty=oneline --abbrev-commit --all
    glb = log --graph --decorate --pretty=oneline --abbrev-commit
    b = branch
    d = diff
    dc = diff --cached
    st = status -sb
    ci = commit
    co = checkout
    serve = daemon --reuseaddr --base-path=. --export-all --verbose

[color]
    ui = auto

[color "branch"]
    current = green reverse
    local = green
    remote = red

#[branch]
#    autosetuprebase = always

[log]
   showsignature = true

[sendemail]
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    smtpuser = phcrva@gmail.com
    smtppass = ********

[difftool "icdiff"]
    cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[difftool "difft"]
    cmd = difft $LOCAL $REMOTE

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P

[push]
    default = simple
[pull]
	ff = only


[url "ssh://git@github.com/saltpay/"]
    insteadOf = https://github.com/saltpay/
